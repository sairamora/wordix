<?php
echo palabraCinco();

/**
 * @return $opcion
 */
function seleccionarOpcion () {
    do {
        echo "Menu WORDIX \n";
        echo "Seleccione una opcion del menu: \n";
        echo "1) Jugar al wordix con una palabra elegida. \n";
        echo "2) Jugar al wordix con una palabra aleatoria. \n";
        echo "3) Mostrar una partida. \n";
        echo "4) Mostrar la primer partida ganadora. \n";
        echo "5) Mostrar resumen de Jugador. \n";
        echo "6) Mostrar listado de partidas ordenadas por jugador y por palabra. \n";
        echo "7) Agregar una palabra de 5 letras a Wordix. \n";
        echo "8) Salir. \n";
        $opcion = trim(fgets(STDIN));
        if (!($opcion>0 && $opcion<9)) { //cambiar
            echo "La opcion no es valida. Ingrese otra opcion. \n";
        }
      } while (!($opcion>0 && $opcion<9)); //cambiar
    return $opcion;
}  

function palabraCinco () {
    do {
        echo "Ingrese una palabra de 5 letras \n";
        $cincoLetras = trim(fgets(STDIN));
        if (strlen($cincoLetras!= 5)) {
            echo "La palabra no tiene 5 letras. Ingrese otra.";
        }
    } while (strlen($cincoLetras)!=5);
    return $cincoLetras;
}



